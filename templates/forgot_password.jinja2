{% extends 'base-bare.jinja2' %}

{% block content %}
  {% with messages = get_flashed_messages(with_categories=true) %}
    {% if messages %}
      {% for category, message in messages %}
        {% if category == "danger" %}
          <p class="w3-red w3-padding-large w3-round">{{ message }}</li>
        {% else %}
          <p class="w3-green w3-padding-large w3-round">{{ message }}</li>
        {% endif %}
      {% endfor %}
    {% endif %}
  {% endwith %}

  <form method="POST" action="{{ url_for('forgot_password') }}">
    {{ form.hidden_tag() }}

    <p>
      {{ form.username.label() }}
      {{ form.username(class="w3-input w3-round w3-border w3-light-grey") }}
    </p>

    <div class="w3-row">
      <div class="w3-half">
        {% if LOGIN_RECAPTCHA %}
          {{ recaptcha }}
          <br>
        {% endif %}

        <button class="w3-btn w3-round ada-blue" type="submit">{{ gettext("Submit") }}</button>
        <a href="/login" class="w3-btn w3-round" style="background-color:red; color: white">{{ gettext("Cancel")}}</a>
      </div>
      <div class="w3-half">
        <a target="_blank" style="float: right; text-decoration: underline; color: blue;"
          href="{{ url_for('privacy') }}">Privacy policy</a>
      </div>
    </div>
  </form>
{% endblock %}