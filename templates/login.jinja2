{% extends 'base-bare.jinja2' %}
{% block content %}
  {% with messages = get_flashed_messages(with_categories=true) %}
    {% if messages %}
      {% for category, message in messages %}
        {% if category == "danger" %}
          <p class="w3-red w3-padding-large w3-round">{{ message }}</li>
        {% else %}
          <p class="w3-green w3-padding-large w3-round">{{ message }}</li>
        {% endif %}
      {% endfor %}
    {% endif %}
  {% endwith %}

  <form method="POST" action="{{ url_for('login') }}">
    {{ form.csrf_token }}
    <label class="w3-text-black"><b>Username</b></label>
    <input class="w3-input w3-border w3-rounded w3-light-grey" type="text" name="username" required>
    <br>
    <label class="w3-text-black"><b>Password</b></label>
    <input class="w3-input w3-border w3-rounded w3-light-grey" type="password" name="password" required>
    <br>
    <button class="w3-btn ada-blue" type="submit">Log In</button>
  </form>
{% endblock %}
