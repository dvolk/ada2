{% extends 'base-bare.jinja2' %}
{% block content %}
  {% with messages = get_flashed_messages(with_categories=true) %}
    {% if messages %}
      {% for category, message in messages %}
        {% if category == "danger" %}
          <p class="w3-red w3-padding-large w3-round">{{ message }}</li>
        {% else %}
          <p class="w3-green w3-padding-large w3-round">{{ message }}</li>
        {% endif %}
      {% endfor %}
    {% endif %}
  {% endwith %}

  <form method="POST" action="{{ url_for('login') }}">
    {{ form.csrf_token }}
    <label class="w3-text-black">{{ gettext("Username") }}</label>
    <input class="w3-input w3-border w3-round w3-light-grey" type="text" name="username" required>
    <br>
    <label class="w3-text-black">{{ gettext("Password") }}</label>
    <input class="w3-input w3-border w3-round w3-light-grey" type="password" name="password" required>
    <br>
    {% if LOGIN_RECAPTCHA %}
      {{ recaptcha }}
      <br>
    {% endif %}
    <button class="w3-btn w3-round ada-blue" type="submit">{{ gettext("Log In") }}</button>
    <a class="w3-btn w3-round ada-blue" href="/register">{{ gettext("Register") }}</a>
    {% if show_google_button %}
      <a class="w3-btn w3-round w3-green" href="/google_login">
        <i class="fa-brands fa-fw fa-google"></i> {{ gettext("Google Login") }}
      </a>
    {% endif %}
  </form>
{% endblock %}
