{% extends 'base.jinja2' %}

{% block content %}

  {{ info(gettext("Your username is '{username}'. If you'd like to change it, please let us know."), username=current_user.username) }}
  {{ info(gettext("If you log in with a third party provider like Google, you should change your given name, family name and email on the provider, and it will be updated here next time you log in.")) }}
  {{ idea(gettext("If you log in with a third party provider, you can set a password here. That will allow you to use either the local login form or the provider login method.")) }}

  <div class="w3-container w3-yellow">
    <h2>{{ gettext("User Settings") }}</h2>
  </div>

  <div class="w3-container w3-pale-yellow">
    <form method="POST">
      {{ form.hidden_tag() }}
      <p>
        <div class="w3-half" style="padding-right: 5px;">
          {{ form.given_name.label() }}
          {{ form.given_name(class="w3-input w3-round w3-border") }}
        </div>
        <div class="w3-half" style="padding-left: 5px;">
          {{ form.family_name.label() }}
          {{ form.family_name(class="w3-input w3-round w3-border") }}
        </div>
      </p>
      <br/><br/><br/> {# what? why? #}
      <p>
        {{ form.organization.label() }}
        {{ form.organization(class="w3-input w3-round w3-border") }}
      </p>
      <p>
        {{ form.job_title.label() }}
        {{ form.job_title(class="w3-input w3-round w3-border") }}
      </p>
      <p>
        {{ form.email.label() }}
        {{ form.email(class="w3-input w3-round w3-border") }}
      </p>
      <p>
        <div class="w3-half" style="padding-right: 5px;">
          {{ form.language.label() }}
          {{ form.language(class="w3-input w3-round w3-white w3-border") }}
        </div>
        <div class="w3-half" style="padding-left: 5px;">
          {{ form.timezone.label() }}
          {{ form.timezone(class="w3-input w3-round w3-white w3-border") }}
        </div>
      </p>
      <br/><br/><br/> {# what? why? #}

      <p>
        <div class="w3-half" style="padding-right: 5px;">
          {{ form.password.label() }}
          {{ form.password(class="w3-input w3-round w3-border") }}
        </div>
        <div class="w3-half" style="padding-left: 5px;">
          {{ form.password_confirm.label() }}
          {{ form.password_confirm(class="w3-input w3-round w3-border") }}
        </div>
      </p>

      <br/><br/><br/> {# what? why? #}

      <p>
        {{ form.submit(class="w3-button w3-round w3-blue") }}
      </p>
    </form>
  </div>
  <br/>

{% endblock %}
