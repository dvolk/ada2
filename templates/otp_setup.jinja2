{% extends 'base-bare.jinja2' %}

{% block content %}
<h1 style="text-align: center;">2FA Setup</h1>
<p style="text-align: left;">
    {{ idea(gettext("In order to ensure the security of our platform, we request that users use two factor authentication (2FA).")) }}
</p>
<p style="text-align: left;">
    {{ info(gettext("Please use Google Authenticator (or another 2FA application) to scan the QR code below to generate your OTP (one time password), and confirm using the text box below.")) }}
</p>
<p style="text-align: left;">
    {{ info(gettext("Once set up, you will need to verify your OTP once every two weeks.")) }}
</p>
<br/>
<div class="image-container" style="text-align: center;">
    <img src="{{ qrcode(uri) }}" alt="QR Code">
    <p>Secret: {{ secret }}</p>
</div>

<form method="POST" action="{{ url_for('otp_setup') }}">
    {{ form.hidden_tag() }}
    <p>
        {{ form.otp_token.label() }}
        {{ form.otp_token(class="w3-input w3-round w3-border w3-light-grey") }}
    </p>
    {% with messages = get_flashed_messages(with_categories=true) %}
    {% if messages %}
        {% for category, message in messages %}
        {% if category == "danger" %}
            <p class="w3-red w3-padding-large w3-round">{{ message }}</p>
        {% else %}
            <p class="w3-green w3-padding-large w3-round">{{ message }}</p>
        {% endif %}
        {% endfor %}
    {% endif %}
    {% endwith %}
    <p style="text-align: center;">
        {{ form.submit(class="w3-btn w3-blue w3-round") }}
    </p>
</form>

{% endblock %}