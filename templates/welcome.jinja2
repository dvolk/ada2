{% extends 'base.jinja2' %}

{% block content %}

  {% if current_user.is_admin %}
    <br/>
    <div class="w3-container w3-red">
      <h2>{{ gettext("Problem Reports") }}</h2>
    </div>
    <div class="w3-container w3-pale-red">
      <p>
        <table class="w3-table-all">
          <thead>
            <th>{{ gettext("User") }}</th>
            <th>{{ gettext("Report title") }}</th>
            <th>{{ gettext("Created ago") }}</th>
          </thead>
          {% for r in ProblemReport.query.filter_by(is_hidden=False)|reverse %}
            <tr>
              <td>{{ r.user.username }}</td>
              <td>{{ r.title }}</td>
              <td>{{ humanize.naturaldelta(now - r.creation_date) }}</td>
            </tr>
          {% endfor %}
        </table>
      </p>
    </div>
  {% endif %}

  <h2>{{ gettext("Welcome to ADA Data Analysis 2025") }}</h2>

  <p>{{ gettext("We hope you'll enjoy your stay with our new greatly improved service.") }}</p>

  <h2>{{ gettext("What is Ada?") }}</h2>

  <p>
    {{ gettext("This service allows you to remotely access your data and create machines (virtualized linux desktop environments), which contain all the software, data and compute resources you will need to perform your work.") }}
  </p>

  <p>
    {{ gettext("For help and info, find the help button on the side bar menu. These pages have specifc information for each area of the site.") }}
  </p>

  <h2>{{ gettext("Feedback and help") }}</h2>

  <p>{{ gettext("Have a question, request or an issue to report?") }}</p>

  <p>
    {{ gettext("Let us know at:") }} {{ email('contact@ada-science.io') }}
  </p>

{% endblock %}
