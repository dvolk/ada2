{% extends 'base-bare.jinja2' %}

{% block content %}
  {% with messages = get_flashed_messages(with_categories=true) %}
    {% if messages %}
      {% for category, message in messages %}
        {% if category == "danger" %}
          <p class="w3-red w3-padding-large w3-round">{{ message }}</li>
        {% else %}
          <p class="w3-green w3-padding-large w3-round">{{ message }}</li>
        {% endif %}
      {% endfor %}
    {% endif %}
  {% endwith %}

  <h2>Thank you for signing up.</h2>

  <p>Please complete your profile:</p>

  <form method="post">
    {{ form.hidden_tag() }}
    {% for field in form if field.name != 'csrf_token' and field.name != 'submit' %}
      <label for="{{ field.id }}">{{ field.label.text }}:</label>
      {{ field(class="w3-input w3-round w3-border w3-light-grey") }}<br>
    {% endfor %}
    {{ form.submit(class="w3-button w3-blue w3-round") }}
  </form>

{% endblock %}
